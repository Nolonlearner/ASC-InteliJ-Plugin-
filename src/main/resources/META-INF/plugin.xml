<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.nolonlearner.ascintelijplugin</id>
    <name>ASC-InteliJ-</name>
    <vendor>nolonlearner</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="VersionControlToolWindow"
                    factoryClass="com.github.nolonlearner.ascintelijplugin.toolWindow.VersionControlToolWindowFactory" />
    </extensions>


    <applicationListeners>
        <listener class="com.github.nolonlearner.ascintelijplugin.listeners.ListenerManager"
                  topic="com.intellij.openapi.editor.event.EditorFactoryListener"/>
    </applicationListeners>
</idea-plugin>
